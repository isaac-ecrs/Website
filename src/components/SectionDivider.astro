---
interface Props {
  color?: string;
  flip?: boolean;
}

const { color = '#f9f7f1', flip = false } = Astro.props;
---

<div class:list={['section-divider', { 'flip': flip }]}>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
    <path d="M0,0 L1200,40 L1200,120 L0,120 Z" fill={color}></path>
  </svg>
</div>

<style lang="scss">
.section-divider {
  position: relative;
  width: 100%;
  height: 60px;
  overflow: hidden;
  line-height: 0;

  &.flip {
    transform: rotate(180deg);
  }

  svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 60px;
  }
}
</style>
