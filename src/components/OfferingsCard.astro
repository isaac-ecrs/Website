---
interface Props {
  title: string;
  intro: string;
  items: string[];
}

const { title, intro, items } = Astro.props;
---

<div class="offerings-card" data-reveal="bottom">
  <h3>{title}</h3>
  <p class="offerings-intro">{intro}</p>
  <ul class="offerings-list">
    {items.map((item) => <li>{item}</li>)}
  </ul>
</div>

<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;

  .offerings-card {
    background: white;
    padding: 2em;
    border-radius: $border-radius-card;
    box-shadow: 10px 10px 0px rgba($color-text-dark, 0.08);

    h3 {
      color: $color-primary;
      margin-bottom: 0.5em;
    }
  }

  .offerings-intro {
    color: rgba($color-text-dark, 0.8);
    margin-bottom: 1em;
  }

  .offerings-list {
    list-style: none;
    padding: 0;
    margin: 0;

    li {
      position: relative;
      padding-left: 1.5em;
      margin-bottom: 0.75em;
      color: $color-text-dark;

      &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0.5em;
        width: 8px;
        height: 8px;
        background: $color-accent;
        border-radius: 50%;
      }

      &:last-child {
        margin-bottom: 0;
      }
    }
  }
</style>
