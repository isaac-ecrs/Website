{
  "$ref": "#/definitions/events",
  "definitions": {
    "events": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "eventSlug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+-\\d{4}$"
        },
        "startDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "endDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "location": {
          "type": "object",
          "properties": {
            "venue": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "state": {
              "type": "string"
            },
            "zip": {
              "type": "string"
            },
            "website": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "venue",
            "address",
            "city",
            "state",
            "zip"
          ],
          "additionalProperties": false
        },
        "heroImage": {
          "type": "string"
        },
        "bodyImage": {
          "type": "string"
        },
        "cost": {
          "type": "string"
        },
        "registrationEmail": {
          "type": "string",
          "format": "email"
        },
        "shortDescription": {
          "type": [
            "string",
            "null"
          ]
        },
        "venueDescription": {
          "type": "string"
        },
        "venuePhone": {
          "type": "string"
        },
        "highlights": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "icon": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "title",
              "description"
            ],
            "additionalProperties": false
          }
        },
        "accommodation": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "rates": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "occupancy": {
                      "type": "string"
                    },
                    "adult": {
                      "type": "string"
                    },
                    "child": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "occupancy",
                    "adult"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "name",
              "rates"
            ],
            "additionalProperties": false
          }
        },
        "schedule": {
          "type": "object",
          "properties": {
            "checkIn": {
              "type": "string"
            },
            "checkOut": {
              "type": "string"
            },
            "daily": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "time": {
                    "type": "string"
                  },
                  "activity": {
                    "type": "string"
                  }
                },
                "required": [
                  "time",
                  "activity"
                ],
                "additionalProperties": false
              }
            },
            "notes": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "tuition": {
          "type": "object",
          "properties": {
            "adult": {
              "type": "string"
            },
            "child": {
              "type": "string"
            },
            "notes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "adult"
          ],
          "additionalProperties": false
        },
        "deadlines": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "date",
              "description"
            ],
            "additionalProperties": false
          }
        },
        "policies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "content": {
                "type": "string"
              }
            },
            "required": [
              "title",
              "content"
            ],
            "additionalProperties": false
          }
        },
        "ageNotes": {
          "type": "string"
        },
        "classPeriods": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "period": {
                "type": "string"
              },
              "offerings": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "class": {
                      "type": "string"
                    },
                    "descriptionYear": {
                      "type": "number"
                    },
                    "days": {
                      "type": "string"
                    },
                    "age": {
                      "type": "string"
                    },
                    "note": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "class"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "period",
              "offerings"
            ],
            "additionalProperties": false
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "eventSlug",
        "startDate",
        "endDate",
        "location",
        "cost",
        "registrationEmail"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}